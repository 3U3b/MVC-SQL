@model MVCwithSQLITE.Models.Leader
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div>
    <a class="btn btn-light" asp-action="Create">還沒有帳號?點我前往註冊</a>
</div>

<div class="row form-group mt-3">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <!--<div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            <div class="form-group">
                <!--  asp-for = "model中的屬性名稱" -->
                <label asp-for="LeaderId" class="control-label">Login (Id)</label>
                <input asp-for="LeaderId" class="form-control" />
                <!--<span asp-validation-for="LeaderId" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Password (Name)</label>
                <input asp-for="Name" class="form-control" />
                <!--<span asp-validation-for="Name" class="text-danger"></span>-->
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="登錄" class="btn btn-primary" />
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-info">
                    <strong>@Html.ValidationSummary(false)</strong>
                </div>
            }
        </form>
    </div>
</div>